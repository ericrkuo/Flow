extends layout

block append stylesheets
    link(rel='stylesheet', href='/stylesheets/tutorialCSS.css')
    link(rel='stylesheet', href='/stylesheets/backgroundCSS.css')
block content
    .container.w-100.text-center
        h2.text-white.mb-4 Curious how this works? Follow our tutorial below!
        #demo.carousel.slide(data-ride='carousel' data-interval='false')
            ol.carousel-indicators
                li.active(data-target="#demo" data-slide-to="0")
                li(data-target="#demo" data-slide-to="1")
                li(data-target="#demo" data-slide-to="2")
                li(data-target="#demo" data-slide-to="3")
                li(data-target="#demo" data-slide-to="4")
                li(data-target="#demo" data-slide-to="5")
            .carousel-inner
                .carousel-item.active
                    img.d-flex.w-100(src='../libraries/pictures/tutorial-index.png' alt='Los Angeles')
                    .carousel-caption.d-none.d-md-block
                        h5 First slide label
                        p I am some text
                .carousel-item
                    img.d-flex.w-100(src='../libraries/pictures/tutorial-aboutUs.png' alt='Chicago')
                    .carousel-caption.d-none.d-md-block
                        h5 Second slide label
                        p I am some text
                .carousel-item
                    img.d-flex.w-100(src='../libraries/pictures/tutorial-webcam.png' alt='Los Angeles')
                    .carousel-caption.d-none.d-md-block
                        h5 Third slide label
                        p I am some text
                .carousel-item
                    img.d-flex.w-100(src='../libraries/pictures/tutorial-track.png' alt='Los Angeles')
                    .carousel-caption.d-none.d-md-block
                        h5 Third slide label
                        p I am some text
                .carousel-item
                    img.d-flex.w-100(src='../libraries/pictures/tutorial-trackModal.png' alt='Los Angeles')
                    .carousel-caption.d-none.d-md-block
                        h5 Third slide label
                        p I am some text
                .carousel-item
                    img.d-flex.w-100(src='../libraries/pictures/tutorial-trackPlaylist.png' alt='Los Angeles')
                    .carousel-caption.d-none.d-md-block
                        h5 Third slide label
                        p I am some text
            a.carousel-control-prev(href='#demo' role='button' data-slide='prev')
                span.carousel-control-prev-icon(aria-hidden='true')
                span.sr-only Previous
            a.carousel-control-next(href='#demo' role='button' data-slide='next')
                span.carousel-control-next-icon(aria-hidden='true')
                span.sr-only Next