extends layout

block append stylesheets
    link(href='../libraries/circle.png', type="image")
    link(rel='stylesheet', href='/stylesheets/webcamCSS.css')
    link(rel='stylesheet', href='/stylesheets/backgroundCSS.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css')
block content
    .container-fluid.text-center#webcam
        h2.text-white#header How are you feeling right now?
        .container-fluid.d-flex.justify-content-center
            video#video.video-animation(playsinline='' autoplay='')
            canvas#canvas
        .container-fluid.text-center
            #beforeCaptureGroup.btn-group(role='group')
                button.btn.btn-outline-light(type='button')#take-photo CAPTURE
            #afterCaptureGroup.btn-group(role='group')
                button.btn.btn-outline-light.mx-2(type='button')#try-again TAKE PHOTO AGAIN
                button.btn.btn-outline-light(type='button' data-toggle="tooltip" data-placement="top" title=`Submit your selfie and weâ€™ll curate your tracks based on your mood and Spotify history!`)#get-tracks SUBMIT
    #loader.container-fluid.text-center
        .container#box
        .container#shadow
        h1.mt-5.text-white#loading-text Curating your playlist
    script(src='/js/webcam.js')